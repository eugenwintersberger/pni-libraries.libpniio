<group name="/" type="NXroot">

    <group name="scalar_fields">
    	<field type="uint8" name="uint8_field"></field>
    	<field type="uint16" name="uint16_field"></field>
    	<field type="uint32" name="uint32_field"></field>
    	<field type="uint64" name="uint64_field"></field>
    	<field type="int8" name="int8_field"></field>
    	<field type="int16" name="int16_field"></field>
    	<field type="int32" name="int32_field"></field>
    	<field type="int64" name="int64_field"></field>
    	<field type="float32" name="float32_field"></field>
    	<field type="float64" name="float64_field"></field>
    	<field type="float128" name="float128_field"></field>
    	<field type="string" name="string_field"></field>
    </group>
    
    <group name="multidim_field">
    	<field type="uint16" name="data" units="cps">
    		<dimensions rank="3">
    			<dim value="0" index="1"/>
    			<dim value="1024" index="2"/>
    			<dim value="2048" index="3"/>
    		</dimensions>
    	</field>
    
    </group>
    
</group>
